{
    "name": "starter-tailwindcss",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "bun tailwindcss -i ./src/styles/global.css -o ./src/public/zenith.css --watch & bun zen-dev",
        "build": "bun tailwindcss -i ./src/styles/global.css -o ./src/public/zenith.css && bun zen-build",
        "preview": "bun zen-preview",
        "tailwind": "bun tailwindcss -i ./src/styles/global.css -o ./src/public/zenith.css",
        "test": "bun test",
        "lint": "eslint .",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@zenithbuild/core": "^1.2.1"
    },
    "devDependencies": {
        "@tailwindcss/cli": "latest",
        "@types/bun": "latest",
        "@typescript-eslint/eslint-plugin": "latest",
        "@typescript-eslint/parser": "^8.53.0",
        "eslint": "^9.39.2",
        "prettier": "^3.7.4",
        "tailwindcss": "^4.1.18"
    }
}